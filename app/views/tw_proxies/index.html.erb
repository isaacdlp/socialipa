<h1>Listing Proxies</h1>

<table>
  <thead>
    <tr>
      <th>Nickname</th>
      <th>Accounts</th>
      <th>Host</th>
      <th>Port</th>
      <th>Username</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tw_proxies.each do |tw_proxy| %>
      <tr>
        <td><%= tw_proxy.nickname %></td>
        <td><%= TwAccount.where('proxy = (?)', tw_proxy.nickname).count %></td>
        <td><%= tw_proxy.host %></td>
        <td><%= tw_proxy.port %></td>
        <td><%= tw_proxy.username %></td>
        <td><%= tw_proxy.password %></td>
        <td><%= link_to 'Show', tw_proxy %></td>
        <td><%= link_to 'Edit', edit_tw_proxy_path(tw_proxy) %></td>
        <td><%= link_to 'Destroy', tw_proxy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

