<h1>Listing Lists</h1>

<p> <%= will_paginate @tw_lists %> </p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Items</th>
      <th>Description</th>
      <th>Position</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @tw_lists.each do |tw_list| %>
      <tr>
        <td><%= tw_list.name %></td>
        <td><%= tw_list.tw_list_items.count %></td>
        <td><%= tw_list.description %></td>
        <td><%= tw_list.position %></td>
        <td><%= link_to 'Show', tw_list %></td>
        <td><%= link_to 'Edit', edit_tw_list_path(tw_list) %></td>
        <td><%= link_to 'Clone', clone_tw_list_path(tw_list) %></td>
        <td><%= link_to 'Destroy', tw_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p> <%= will_paginate @tw_lists %> </p>

<%= link_to 'New List', new_tw_list_path %> |
